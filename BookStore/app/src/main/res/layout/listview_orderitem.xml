<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/o_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_marginTop="7dp"
        />
    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lv_oid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/o_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff0000"
            android:layout_toRightOf="@id/lv_oid"
            android:layout_marginLeft="24dp"
            android:text="123456"
            />
        <TextView
            android:id="@+id/lv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_oid"
            android:layout_marginTop="5dp"
            android:text="订单时间："
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/o_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:layout_below="@id/o_id"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/lv_time"
            android:layout_marginLeft="8dp"
            android:text=""
            />
        <TextView
            android:id="@+id/lv_pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_time"
            android:layout_marginTop="5dp"
            android:text="商品名称："
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/o_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff0000"
            android:layout_below="@id/o_time"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/lv_time"
            android:layout_marginLeft="8dp"
            android:text=""
            />

        <TextView
            android:id="@+id/lv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_pname"
            android:layout_marginTop="5dp"
            android:text="数量："
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/o_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff0000"
            android:layout_below="@id/o_name"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/lv_time"
            android:layout_marginLeft="8dp"
            android:text="1"
            />
        <TextView
            android:id="@+id/lv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_number"
            android:layout_marginTop="5dp"
            android:text="总价："
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/o_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff0000"
            android:layout_below="@id/o_number"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lv_time"
            android:layout_marginLeft="8dp"
            android:text=""
            />
        <Button
            android:id="@+id/o_delete"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@id/o_number"
            android:layout_toRightOf="@id/o_total"
            android:text="删除"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#EE0000"

            />
    </RelativeLayout>
</LinearLayout>